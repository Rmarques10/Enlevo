@model Enlevo.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<div class="container-header">
    <div class="header-text">
        <h2 style="display:inline-block;">Excluir</h2> <img src="~/images/circle.png" width="10" height="10" />
        <p>Tem certeza que gostaria de excluir?</p>
    </div>
</div>
<div>
    <dl class="dl-horizontal container-details">
        <dt class="item-detail">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class="item-detail">
            @Html.DisplayNameFor(model => model.QuantidadeProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QuantidadeProduto)
        </dd>
        <dt class="item-detail">
            @Html.DisplayNameFor(model => model.ValorProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Delete" class="btn btn-default btn-delete" />
        <a asp-action="Index" class="btn btn-list">Cancelar</a>
    </form>
</div>
